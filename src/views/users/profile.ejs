<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: "Profile"}) %>
<body class="body-style">
    <%- include('../partials/header') %>

    
    <div class="TopProfile">
        <h1 class="bienvenidaProfile">Hola <%= user.userName %> </h1>
        <div class="settingsProfile">
            <a href="/users/edit/<%= user.id %> "><i class="fas fa-user-cog"></i></a>
            <a href="/"><i class="fas fa-times-circle"></i></a>
        </div>
    </div>
    
    <main class="styleMainProfile">

        <div class="containerPhoto">
            <img src="/img/userAvatars/<%=user.userAvatar%>" alt="Avatar">
        </div>

        <div class="infoUser infoPersonal">
            <h3>Información personal</h3>

            <div class="containerdateProfile">
                <P class="nameDate">Nombre</P>
                <p><%=user.userName%></p>
            </div>

            <div class="containerdateProfile">
                <P class="nameDate">Apellido</P>
                <p><%=user.userLastName%></p>
            </div>

            <div class="containerdateProfile">
                <P class="nameDate">Usuario</P>
                <p><%=user.userAs%></p>
            </div>
        </div>

        <div class="infoUser infoAccess">
            <h3>Información de acceso</h3>

            <div class="containerdateProfile3">
                <P class="nameDate">Email</P>
                <p><%=user.userEmail%></p>
            </div>

            <div class="containerdateProfile3">
                <P class="nameDate">Contraseña</P>
                <p>********* <i class="far fa-eye-slash"></i></p>
            </div>

            <p class="change"><a href="users/formEditUser/<%=user.id%> ">Cambiar contraseña</a></p>
        </div>

        <div class="infoUser dayReceiveOrder">
            <h3>Días a recibir pedido</h3>
            

            <% if (user.associateDay_user[0].dataValues.id == 8){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Todos los días</p>
                    
                </div>
            <% } else if ( user.associateDay_user[0].id != 8){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Todos los días</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user[0].id != 1){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Lunes</p>
                </div>
            <% } else {%>
                <div class="containerdateProfile">
                    <p style="color: red; font-weight: bold;">Lunes</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user.id  === 2){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Martes</p>
                </div>
            <% } else if (user.associateDay_user.id  != 2){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Martes</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user.id  === 3){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Miércoles</p>
                </div>
            <% } else if ( user.associateDay_user.id != 3){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Miércoles</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user.id  === 4){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Jueves</p>
                </div>
            <% } else if ( user.associateDay_user.id  != 4){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Jueves</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user.id  === 5){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Viernes</p>
                </div>
            <% } else if ( user.associateDay_user.id  != 5){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Viernes</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user.id  === 6){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Sábado</p>
                </div>
            <% } else if ( user.associateDay_user.id  != 6){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Sábado</p>
                </div>
            <% } %> 

            <% if (user.associateDay_user.id  == 7){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;">Domingo</p>
                </div>
            <% } else if ( user.associateDay_user.id  != 7){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Domingo</p>
                </div>
            <% } %> 

        </div>

        <div class="infoUser infoContact">
            <h3>Información de contacto</h3>

            <div class="containerdateProfile3">
                <P class="nameDate">Teléfono</P>
                <p><%=user.userPhone%></p>
            </div>
            
            <div class="containerdateProfile3">
                <P class="nameDate">Dirección</P>
                <p><%=user.userAddress%></p>            
            </div>

            <div class="containerdateProfile3">
                <P class="nameDate">Nacionalidad</P>
                <% if (user.Nacionalidad) { %>
                    <%= user.Nacionalidad %> 
                <%} else { %>
                    <p>¡Completar perfil!</p>
                <% } %>             
            </div>
        </div>

        <div class="infoUser favorites">
            <h3>Favoritos</h3>
        </div>
        <form action="/users/<%=user.id%>" method="POST" style="display: inline-flex">

            <button type="submit" class="action-button delete">Cerrar Sesión</button>

        </form>

        <form action="/users/<%=user.id%>?_method=DELETE" method="POST" style="display: inline-flex">

            <button type="submit" class="action-button delete">Eliminar</button>

        </form>

    </main>

    <%- include('../partials/footer') %>
</body>
</html>