<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: "Profile"}) %>
<body class="body-style">
    <%- include('../partials/header') %>

    
    <div class="TopProfile">
        <h1 class="bienvenidaProfile">Hola <%= user.username %> </h1>
        <div class="settingsProfile">
            <a href="/users/edit/<%= user.id %> "><i class="fas fa-user-cog"></i></a>
            <a href="/"><i class="fas fa-times-circle"></i></a>
        </div>
    </div>
    
    <main class="styleMainProfile">

        <div class="containerPhoto">
            <img src="/imag/userAvatars/<%=user.useravatar%>" alt="Avatar">
        </div>

        <div class="infoUser infoPersonal">
            <h3>Información personal</h3>

            <div class="containerdateProfile">
                <P class="nameDate">Nombre</P>
                <p><%=user.username%></p>
            </div>

            <div class="containerdateProfile">
                <P class="nameDate">Apellido</P>
                <p><%=user.userlastname%></p>
            </div>

            <div class="containerdateProfile">
                <P class="nameDate">Usuario</P>
                <p><%=user.userAs%></p>
            </div>
        </div>

        <div class="infoUser infoAccess">
            <h3>Información de acceso</h3>

            <div class="containerdateProfile3">
                <P class="nameDate">Email</P>
                <p><%=user.useremail%></p>
            </div>

            <div class="containerdateProfile3">
                <P class="nameDate">Contraseña</P>
                <p>********* <i class="far fa-eye-slash"></i></p>
            </div>

            <p class="change"><a href="users/formEditUser/<%=user.id%> ">Cambiar contraseña</a></p>
        </div>

        <div class="infoUser daysReceiveOrder">
            <h3>Días a recibir pedido</h3>

            <% for( let i = 0; i < user.associateDay_user.length; i++ ) { %>
                <% if (user.associateDay_user[i].dataValues.id ) { %>
                    <div class="containerdateProfile">
                        <p style="color: #1376ab; font-weight: bold;"><%= user.associateDay_user[i].dataValues.dayname %> </p>
                    </div>
                <% } else { %>
                    <div class="containerdateProfile">
                        <p style="color: black;"><%= user.associateDay_user[i].dataValues.dayname %> </p>
                    </div>
                <% } %>
            <% } %>

        </div>

        <div class="infoUser infoContact">
            <h3>Información de contacto</h3>

            <div class="containerdateProfile3">
                <P class="nameDate">Teléfono</P>
                <p><%=user.userphone%></p>
            </div>
            
            <div class="containerdateProfile3">
                <P class="nameDate">Dirección</P>
                <p><%=user.useraddress%></p>            
            </div>

            <div class="containerdateProfile3">
                <P class="nameDate">Nacionalidad</P>
                <% if (user.Nacionalidad) { %>
                    <%= user.Nacionalidad %> 
                <%} else { %>
                    <p>¡Completar perfil!</p>
                <% } %>             
            </div>
        </div>

        <div class="infoUser favorites">
            <h3>Favoritos</h3>
        </div>


    </main>

    <%- include('../partials/footer') %>
</body>
</html>