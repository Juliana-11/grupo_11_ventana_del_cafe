<!DOCTYPE html>
<html lang="en">
    <%- include('../partials/head', {title: "Profile"}) %>
<body class="body-style">
    <%- include('../partials/header') %>

    <div class="TopProfile">
        <h1 class="bienvenidaProfile">Hola <%= user.userName %> </h1>
        <div class="settingsProfile">
            <a href="/formEdit"><i class="fas fa-user-cog"></i></a>
            <a href="/formEdit"><i class="fas fa-times-circle"></i></a>
        </div>
    </div>
    
    <main class="styleMainProfile">

        <div class="containerPhoto">
            <img src="/imag/userAvatars/<%=user.userAvatar%>" alt="Avatar">
        </div>

        <div class="infoUser infoPersonal">
            <h3>Información personal</h3>

            <div class="containerdateProfile">
                <P class="nameDate">Nombre</P>
                <p><%=user.userName%></p>
            </div>

            <div class="containerdateProfile">
                <P class="nameDate">Apellido</P>
                <p><%=user.userLastName%></p>
            </div>

            <div class="containerdateProfile">
                <P class="nameDate">Usuario</P>
                <p><%=user.userAs%></p>
            </div>
        </div>

        <div class="infoUser infoAccess">
            <h3>Información de acceso</h3>

            <div class="containerdateProfile3">
                <P class="nameDate">Email</P>
                <p><%=user.userEmail%></p>
            </div>

            <div class="containerdateProfile3">
                <P class="nameDate">Contraseña</P>
                <p>********* <i class="far fa-eye-slash"></i></p>
            </div>

            <p class="change"><a href="users/formEditUser/<%=user.id%> ">Cambiar contraseña</a></p>
        </div>

        <div class="infoUser daysReceiveOrder">
            <h3>Días a recibir pedido</h3>

            <% if (user.userChecTodosDias === "Todos los días"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecTodosDias%></p>
                </div>
            <% } else if ( user.userChecTodosDias != "Todos los días"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Todos los días</p>
                </div>
            <% } %> 

            <% if (user.userChecLunes === "Lunes"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecLunes%></p>
                </div>
            <% } else if ( user.userChecLunes != "Lunes"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Lunes</p>
                </div>
            <% } %> 

            <% if (user.userChecMartes === "Martes"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecMartes%></p>
                </div>
            <% } else if ( user.userChecMartes != "Martes"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Martes</p>
                </div>
            <% } %> 

            <% if (user.userChecMiercoles === "Miércoles"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecMiercoles%></p>
                </div>
            <% } else if ( user.userChecMiercoles != "Miércoles"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Miércoles</p>
                </div>
            <% } %> 

            <% if (user.userChecJueves === "Jueves"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecJueves%></p>
                </div>
            <% } else if ( user.userChecJueves != "Jueves"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Jueves</p>
                </div>
            <% } %> 

            <% if (user.userChecViernes === "Viernes"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecViernes%></p>
                </div>
            <% } else if ( user.userChecViernes != "Viernes"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Viernes</p>
                </div>
            <% } %> 

            <% if (user.userChecSabado === "Sábado"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecSabado%></p>
                </div>
            <% } else if ( user.userChecSabado != "Sábado"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Sábado</p>
                </div>
            <% } %> 

            <% if (user.userChecDomingo === "Domingo"){%>
                <div class="containerdateProfile">
                    <p style="color: #1376ab; font-weight: bold;"><%=user.userChecDomingo%></p>
                </div>
            <% } else if ( user.userChecDomingo != "Domingo"){%>
                <div class="containerdateProfile">
                    <p style="color: black;">Domingo</p>
                </div>
            <% } %> 

        </div>

        <div class="infoUser infoContact">
            <h3>Información de contacto</h3>

            <div class="containerdateProfile3">
                <P class="nameDate">Teléfono</P>
                <p><%=user.userPhone%></p>
            </div>
            
            <div class="containerdateProfile3">
                <P class="nameDate">Dirección</P>
                <p><%=user.userAddress%></p>            
            </div>

            <div class="containerdateProfile3">
                <P class="nameDate">Nacionalidad</P>
                <% if (user.Nacionalidad) { %>
                    <%= user.Nacionalidad %> 
                <%} else { %>
                    <p>¡Completar perfil!</p>
                <% } %>             
            </div>
        </div>

        <div class="infoUser favorites">
            <h3>Favoritos</h3>
        </div>


    </main>

    <%- include('../partials/footer') %>
</body>
</html>