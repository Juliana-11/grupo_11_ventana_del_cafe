<% for( let i = 0; i < productsResolve.length; i++ ) { %>
    <div class="item-result-products">
        <div class="container-imag-item-result-products">
            <% if (productsResolve[i].associateImage.productImageName != null) { %>
                <img src="/img/products/<%= productsResolve[i].associateImage.productImageName %> "  alt="Imagen no encontrada" srcset="">
            <% }else {%>
                <img src="/img/products/fondoBanner.jpg "  alt="" srcset="">
            <% } %>
        </div>
    
        <div class="name-item-result-products">
            <h3><%= productsResolve[i].productName %> </h3>
        </div>
    
        <div class="info-money">
            <p class="productPriceList"><%= toThousand(productsResolve[i].productPrice) %></p>
            <% if (productsResolve[i].productDiscount && productsResolve[i].productDiscount != 0) { %>
                <p class="slash">/</p> 
                <p class="productDiscountList"><%= productsResolve[i].productDiscount %> % off</p>
            <% } %>
        </div>
        <div class="button-item-result-products">
            <button><a href="/product/<%= productsResolve[i].id%>">Ver detalles</a></button>
            <button class="agregarCarrito" data-id="<%=productsResolve[i].id%>">Comprar</button>
        </div>
    
        <%# if (locals.session.user) { %>
            <!--div>
                <button>editar</button>
                <button>eliminar</button>
            </div-->
        <%# } %>
    </div>
<% } %>