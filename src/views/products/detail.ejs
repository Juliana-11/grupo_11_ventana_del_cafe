<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', {title: "Detalle de producto"}) %>
<body>
    <%- include('../partials/header') %>
    <main>
        <% console.log(product) %> 
        <section class="productDetail">

            <form action="#" class="buttonExit"><button><i class="fas fa-sign-out-alt"></i> Salir</button></form>

            <div class="containerImgDetail">
                <img class="productImage" src="/imag/products/<%= product.associateImage.productimagename%> " alt="productImage">
            </div>

            <div class="containerInfoDetail">
                <h2 class="productName"><%=product.productname%></h2>
                <p class="productPrice"> <%=product.productprice%> <img src="/imag/pesos.png" alt=""></p>
                <p>Descuento: <%= product.productdiscount %> </p>
                <p>Cantidades disponibles: <%= product.stock %> </p>
                <p>categoria de producto: <%= product.associateCategory.categoryname %> </p>
                <p class="productDescription"><%=product.productdescription%> </p>
                <form action="#">
                    <button class="buttonCarDetail"><i class="fas fa-shopping-cart"></i> Agregar al carrito</button>
                    <button class="buttonLikeProductDetail"><i class="far fa-heart"></i> Mis favoritos </button>
                </form>
            </div>
        </section>

        <div class="propertiesProduct">

            <h3 class="propertyTittle">Propiedades del producto</h3>
            
            <div class="propertycontent">
                <div class="property lado">
                    <div class="propertyIcon"><img src="/imag/fireplace.png" alt=""></div>
                    <h4>Tostado</h4>
                    <p><%=product.associateToastlevelP.toastlevelname%> </p>
                </div>
                
                <div class="property lado">
                    <div class="propertyIcon"><i class="fas fa-map-marker-alt"></i></div>
                    <h4>Origen</h4>
                    <p><%=product.productorigin%> </p>
                </div>
                
                <div class="property">
                    <div class="propertyIcon"><img src="/imag/coffe.png" alt=""></div>
                    <h4>Sabor</h4>
                    <p><%=product.associateProduct_taste.tastename%> </p>
                </div>
            </div>
            
        </div>

    </main>
    <%- include('../partials/footer') %>
</body>

</html>